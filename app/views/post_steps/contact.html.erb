<div class="container-fluid w-50 border rounded shadow mt-5 p-4 ">
  <section class="form-auth text-center">
    <%= form_for @post, url: next_wizard_path, method: "PUT" do |f| %>
      <%= f.hidden_field :post_id, value: @post.id %>
      <h1 class="h3 mb-3 fw-normal">Contact Information </h1><br>
      
      <div class="form-group">  
        <%= f.label :primary_contact, class: "form-label" %>
        <%= f.text_field :primary_contact, autofocus: true %><br><br>
        <%= f.label :secondry_contact, class:"form-label" %>
        <%= f.text_field :secondary_contact, autofocus: true %><br><br><br>
      </div>
      
      <%= link_to "Get Featured",checkout_index_path(id: @post.id),method: 'post', remote: true, class: "btn btn-primary" %><br><br>
      <%= f.hidden_field:user_id, value: current_user.id %>
      <%= link_to "Back", previous_wizard_path(post_id: @post.id), class: "btn btn-secondary" %>
      <%= f.submit "POST AD", class:"btn btn-primary"%>
    <% end %>
  </section>
</div>